<?xml version="1.0" encoding="utf-8"?>
<layer-list
    xmlns:android="http://schemas.android.com/apk/res/android"
>
    <!-- Drop Shadow Stack -->
    <item>
        <shape>
            <padding
                android:bottom="1dp"
			/>

            <solid
                android:color="#0F000000"
			/>
        </shape>
    </item>
    <item>
        <shape>
            <padding
                android:bottom="1dp"
			/>

            <solid
                android:color="#0E000000"
			/>
        </shape>
    </item>
    <item>
        <shape>
            <padding
                android:bottom="1dp"
			/>

            <solid
                android:color="#0C000000"
			/>
        </shape>
    </item>
    
    <!-- Left line -->
    <item>
        <shape>
            <padding
                android:left="3dp"
			/>
            
            <solid
                android:color="#F3A1A1"
			/>
        </shape>
    </item>

    <!-- Background -->
    <item>
        <shape>
            <solid
                android:color="@android:color/white"
			/>
        </shape>
    </item>
</layer-list>